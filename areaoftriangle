
#include<stdio.h>
#include<math.h>
 
int main() {
   float height, base, area;
 
   printf("\nEnter the height of Triangle : ");
   scanf("%f", &height);
 
   printf("\nEnter the Base of Triangle : ");
   scanf("%f", &base);
 
   area = height * base * 0.5;
   printf("\nArea of Triangle : %f\n", area);
 
   return (0);
}
